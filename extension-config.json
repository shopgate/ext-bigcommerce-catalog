{
  "version": "0.1.4",
  "id": "@shopgate/bigcommerce-catalog",
  "directories": {
    "steps": "./extension/",
    "pipelines": "./pipelines/"
  },
  "steps": [],
  "configuration": {
    "storeHash" : {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.storeHash"
      }
    },
    "accessToken" : {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.accessToken"
      }
    },
    "clientId": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.clientId"
      }
    },
    "clientSecret": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.clientSecret"
      }
    },
    "requestTimeout": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": "15000"
      }
    }
  }
}
